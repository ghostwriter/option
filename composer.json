{
    "name": "ghostwriter/wip",
    "description": "Here be dragons",
    "license": "BSD-3-Clause",
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/ghostwriter"
        }
    ],
    "require": {
        "php": ">=7.4,<8.2.0",
        "nikic/php-parser": "^4.13"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.3",
        "phpbench/phpbench": "^1.2",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.16",
        "roave/infection-static-analysis-plugin": "^1.14",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^4.18"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@format",
            "@cs-check",
            "@cs-fix",
            "@psalm",
            "@infection",
            "@phpbench",
            "@test"
        ],
        "clean": [
            "@format",
            "@cs-fix",
            "@psalm"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "format": "composer normalize --no-check-lock --no-update-lock",
        "infection": [
            "@putenv XDEBUG_MODE=coverage",
            "roave-infection-static-analysis-plugin"
        ],
        "phpbench": "phpbench run",
        "psalm": "psalm",
        "psalm-fix-all": "psalm --alter --issues=all",
        "test": "phpunit --colors=always --testdox --stop-on-failure",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --color --coverage-clover clover.xml"
        ]
    }
}
